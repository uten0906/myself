<div class="mx-auto col-12">
  <% if @likes.present? %>
    <div class="mt-3 mx-3">
      <% @likes.each do |post| %>
        <div class="row mb-3 p-3 border rounded rounded-lg bg-white">
          <div class="col-3 col-md-2">
            <% if post.user.profile_picture.attached? %>
              <div class="image">
                <%= image_tag post.user.profile_picture, class:"w-100 img-fulid contain" %>
              </div>
            <% else %>
              <div class="image">
                <%= image_tag "default_user.jpeg", class:"w-100 img-fulid contain" %>
              </div>
            <% end %>
          </div>
          <div class="col-9 ml-md-3">
            <h2 class="name">
              <% if post.user == current_user %>
                <%= link_to post.user.name, account_path %>
              <% else %>
                <%= link_to post.user.name, post.user %>
              <% end %>
            </h2>
            <p class="body">
              <%= post.body %>
            </p>
            <div class="d-flex d-row justify-content-between">
              <div class="like">
              <span>★<%= post.likes.count %></span>
              <% if current_user && current_user.likable_for?(post) %>
                <%= link_to "★いいねをする", [:like, post], method: :patch, class: "button" %>
              <% elsif current_user && current_user.unlikable_for?(post) %>
                <%= link_to "★いいねを削除する", [:unlike, post], method: :patch, data: { confirm: "削除しますか?"} %>
              <% end %>
              </div>
              <% if post.post_pictures.attached? %>
                <p>画像あり</p>
              <% end %>
              <div>
                <%= link_to "詳細を見る", post %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= paginate @likes %>
    </div>
  <% else %>
    <p>投稿がありません。</p>
  <% end %>
</div>
