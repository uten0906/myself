<% @page_title = "パスワードの変更" %>
<h1 class="text-center"><%= @page_title %></h1>

<div class="mx-auto col-12 col-lg-8">
<%= form_for @user, as: "account", url: :password do |form| %>
  <%= render "shared/errors", obj: @user %>
  <div>
    <div class="form-group">
      <div><%= form.label :current_password %></div>
      <div><%= form.password_field :current_password, class: "form-control form-control-lg" %></div>
    </div>
    <div class="form-group">
      <div><%= form.label :password %></div>
      <div><%= form.password_field :password, class: "form-control form-control-lg"  %></div>
    </div>
    <div class="form-group">
      <div><%= form.label :password_confirmation %></div>
      <div><%= form.password_field :password_confirmation, class: "form-control form-control-lg"  %></div>
    </div>
  </div>
  <div><%= form.submit "変更", class: "btn btn-primary btn-lg mt-5" %></div>
<% end %>
</div>
