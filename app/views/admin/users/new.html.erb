<% @page_title = "ユーザー情報の登録" %>
<h1 class="text-center"><%= @page_title %></h1>

<div class="mx-auto col-12 col-xl-10">
  <%= form_for [:admin, @user] do |form| %>
    <%= render "shared/user_form", form: form %>
    <p class="text-danger"><%= flash[:recaptcha_error] %></p>
    <%= recaptcha_tags %>
    <div><%= form.submit "登録", class: "btn btn-primary btn-lg mt-5" %></div>
  <% end %>
</div>
