<% @page_title = "投稿の新規作成" %>
<h1 class="text-center"><%= @page_title %></h1>

<div class="mx-auto col-12 col-lg-10">
  <%= form_for @post do |form| %>
    <div><%= form.label :body %></div>
    <div><%= form.text_area :body, class: "form-control form-control-lg" %></div>
    <div><%= form.file_field :new_post_pictures, multiple: true, class: "mt-3" %>
    <div><%= form.submit "投稿する", class: "btn btn-primary btn-lg mt-5"%></div>
  <% end %>
</div>
