<div class="users-info">
  <% @users.each do |user| %>
    <div class="d-flex flex-row align-items-center my-3 py-3 border rounded bg-white">
      <div class="col-4 col-md-3">
      <% if user.profile_picture.attached? %>
        <div class="image">
          <%= image_tag user.profile_picture, class:"w-100 img-fulid contain" %>
        </div>
      <% else %>
        <div class="image">
          <%= image_tag "default_user.jpeg", class:"w-100 img-fulid contain" %>
        </div>
      <% end %>
      </div>
      <div class="d-flex flex-md-column ml-2 ml-md-5">
        <h2 class="name mb-3 mb-sm-5 mr-5">
        <% if user == current_user %>
          <%= link_to user.name, account_path %>
        <% else %>
          <%= link_to user.name, user %>
        <% end %>
        </h2>
        <div class="">
          <%= link_to "フォロー中(#{user.followings.count})", followings_user_path(user),
            class:"btn btn-info w-150px mr-1 mr-md-5 mb-2 mb-md-0" %>
          <%= link_to "フォロワー(#{user.followers.count})", followers_user_path(user),
            class:"btn btn-info w-150px" %>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @users %>
</div>
