<%= render "body" %>

<div class="mx-auto col-12 col-md-10 my-5">
  <ul class="nav nav-tabs nav-justified" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">投稿</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">いいね</a>
    </li>
